<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Edit Blog </h1>
        <div style:"width: 30%; margin: 0 auto;">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name = "blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name = "blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name = "blog[body]" rows="5"><%= blog.body %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block"> Submit </button>
            </div>         
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
