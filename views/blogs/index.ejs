<% include ../partials/header %>
<div class="container">
    <header class="jumbotron"> 
        <div class="container">
            <h1>Welcome to our blog</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/blogs/new"> Add a new Blog </a>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail text-center">
                     <img src="<%= blog.image %>">
                     <div class="caption">
                         <h4>
                        <%= blog.title %>
                    </h4>
                     </div>
                     <p>
                         <a class="btn btn-primary btn-large" href="/blogs/<%= blog._id %>"> More Info </a>
                     </p>
                </div>
                    
            </div>
        <% }); %>
    </div>
</div>
    <% include ../partials/footer %>

